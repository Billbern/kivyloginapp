<ThemedLabelButton@ButtonBehavior+Label>:
    size_hint: None, None
    font_size: "12sp"
    markup: True

<ThemedButton@Button>:
    background_normal: './data/btn_order_normal.png'
    background_down: './data/btn_order_pressed.png'
    font_size: '15sp'
    markup: True
    border: (10,10,10,10)
    size_hint: None, None
    width: "259dp"
    height: "46dp"

<ThemedInput@TextInput>:
    color: utils.get_color_from_hex("#7d7d7d")
    border: (10,10,10,10)
    background_normal: "./data/bg.png"
    background_active: "./data/bg.png"
    multiline: False
    font_size: "15sp"
    size_hint: None, None
    width: '259dp'
    height: '48dp'
    padding: '15.5dp', '15dp'

<ThemedImageButton@ButtonBehavior+Image>:
    size_hint: None, None
    width: "24dp"
    height: "24dp"